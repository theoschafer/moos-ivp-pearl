//*******************************************************
// Vehicle MOOS configuration file

ServerHost = localhost
ServerPort = 9000

// Community name IS the vehicle name
Community  = sim

//Charles River/MIT Sailing Pavilion
LatOrigin    = 42.358436
LongOrigin   = -71.087448

Processconfig = ANTLER
{
  MSBetweenLaunches = 100
   
  Run = MOOSDB            @ NewConsole = false
  Run = pMarineViewer   @ NewConsole = false
  //Run = pLogger           @ NewConsole = false
  Run = pNodeReporter     @ NewConsole = false
  Run = pEchoVar @ NewConsole = false
  Run = iGPS              @ NewConsole = false
}

ProcessConfig = iGPS
{
  AppTick     = 10
  CommsTick   = 10
  
  Port              = /dev/ttyUSB0
  BaudRate          = 9600
  PREFIX            = NAV
  
  HEADING_SOURCE    = GPRMC
  HEADING_OFFSET    = 0.0
  
  PUBLISH_HDOP         = true
  PUBLISH_RAW          = true
  
  TRIGGER_MSG          = GPGGA
}

ProcessConfig = pEchoVar
{
  Echo = NAV_HEADING_GPRMC -> NAV_HEADING
}

ProcessConfig = pMarineViewer
{
  AppTick    = 4
  CommsTick  = 4

  //tiff_file     = deep_pond_sat.tif
  //tiff_file_b   = deep_pond_map.tif
  //set_pan_x            = 0
  //set_pan_y            = 0
  zoom                 = 1.5
  vehicles_shape_scale = 1.5

  appcast_viewable     = true
  appcast_color_scheme = indigo
	appcast_font_size    = large
	procs_font_size      = large
	nodes_font_size      = xlarge
	
  comms_pulse_viewable_all = false
  vehicles_name_mode       = names
  vehicles_active_color    = green
  vehicles_inactive_color  = red

  stale_report_thresh = 2
  stale_remove_thresh = 30

  scope = PHI_HOST_INFO
  scope = DEPLOY_ALL
  scope = RETURN_ALL
  scope = STATION_KEEP_ALL
  scope = MOOS_MANUAL_OVERRIDE
  scope = STAR_ALL
  scope = PERIMETER_ALL
  scope = FIGURE_EIGHT_ALL
  scope = WIND_GUSTS_ALL
  
  ACTION  = MENU_KEY=star-burst   # STAR_ALL=true  # PERIMETER_ALL=false
  ACTION+ = MENU_KEY=star-burst   # FIGURE_EIGHT_ALL=false
  ACTION  = MENU_KEY=perimeter    # STAR_ALL=false # PERIMETER_ALL=true
  ACTION+ = MENU_KEY=perimeter    # FIGURE_EIGHT_ALL=false
  ACTION  = MENU_KEY=figure-eight # STAR_ALL=false # PERIMETER_ALL=false
  ACTION+ = MENU_KEY=figure-eight # FIGURE_EIGHT_ALL=true
  
  ACTION   = WIND_GUSTS_ALL = true
  ACTION+  = WIND_GUSTS_ALL = false

  BUTTON_ONE   = DEPLOY       # DEPLOY_ALL=true   # RETURN_ALL=false # STATION_KEEP_ALL=false
  BUTTON_TWO   = RETURN       # DEPLOY_ALL=true   # RETURN_ALL=true  # STATION_KEEP_ALL=false
  BUTTON_THREE = STATION-KEEP # DEPLOY_ALL=true   # RETURN_ALL=false # STATION_KEEP_ALL=true
  BUTTON_FOUR  = ALLSTOP      # DEPLOY_ALL=false  # RETURN_ALL=false # STATION_KEEP_ALL=false
  
  //left_context[view_point]  = VIEW_POINT = x=$(XPOS),y=$(YPOS),label=hello
}

ProcessConfig = pNodeReporter
{
  AppTick     = 2
  CommsTick   = 2
  
  platform_type = ship
  platform_length = 2.2
}
